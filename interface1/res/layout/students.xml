<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_stu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/stu_LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/foot_bg"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_stu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center"
            android:background="#00000000"
            android:text="學生入口"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/stu_LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/stu_up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/up" />

        <Button
            android:id="@+id/stu_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/down" />

        <Button
            android:id="@+id/stu_again"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/re" />

        <Button
            android:id="@+id/stu_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/so" />
        
    </LinearLayout>

    <WebView
        android:id="@+id/stu_webView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
